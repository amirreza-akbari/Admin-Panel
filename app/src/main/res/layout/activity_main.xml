<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:fillViewport="true"
    android:layoutDirection="rtl">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="28dp"
        android:paddingBottom="40dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/logoCard"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardCornerRadius="50dp"
            app:cardElevation="12dp"
            app:cardBackgroundColor="#FFFFFF"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/logo_bg">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/logo"
                    android:contentDescription="لوگو"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="خوش آمدید"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#1A1A1A"
            android:layout_marginTop="20dp"
            android:letterSpacing="0.02"
            app:layout_constraintTop_toBottomOf="@id/logoCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:id="@+id/titleUnderline"
            android:layout_width="70dp"
            android:layout_height="4dp"
            android:background="@drawable/title_accent"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/titleText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/subtitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="لطفاً ایمیل خود را وارد کنید"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/titleUnderline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/emailCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@id/subtitleText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:src="@android:drawable/ic_dialog_email"
                    android:tint="#2B628A"
                    android:padding="8dp"
                    android:background="@drawable/icon_circle_light"
                    android:layout_gravity="center"
                    android:layout_marginBottom="14dp"
                    android:contentDescription="ایمیل"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/emailInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusTopStart="16dp"
                    app:boxCornerRadiusTopEnd="16dp"
                    app:boxCornerRadiusBottomStart="16dp"
                    app:boxCornerRadiusBottomEnd="16dp"
                    app:boxStrokeColor="#2B628A"
                    app:boxStrokeWidth="2dp"
                    app:startIconDrawable="@android:drawable/ic_dialog_email"
                    app:startIconTint="#2B628A"
                    app:hintTextColor="#2B628A"
                    app:endIconMode="clear_text"
                    app:endIconTint="#999999">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="آدرس ایمیل"
                        android:inputType="textEmailAddress"
                        android:textSize="16sp"
                        android:padding="16dp"
                        android:textAlignment="viewStart"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="یک کد ۶ رقمی به ایمیل شما ارسال خواهد شد"
                    android:textSize="12sp"
                    android:textColor="#999999"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSendOtp"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:text="ارسال کد تأیید"
            android:textSize="16sp"
            android:textStyle="bold"
            app:icon="@android:drawable/ic_menu_send"
            app:iconGravity="textEnd"
            app:iconSize="22dp"
            app:cornerRadius="16dp"
            app:backgroundTint="#2B628A"
            app:elevation="6dp"
            android:layout_marginTop="24dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:letterSpacing="0.02"
            app:layout_constraintTop_toBottomOf="@id/emailCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>



    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>