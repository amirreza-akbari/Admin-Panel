<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:fillViewport="true"
    android:layoutDirection="rtl">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="28dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/iconCard"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:cardCornerRadius="60dp"
            app:cardElevation="12dp"
            app:cardBackgroundColor="#2B628A"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_centerInParent="true"
                    android:src="@android:drawable/ic_lock_idle_lock"
                    android:tint="#FFFFFF"
                    android:contentDescription="قفل"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/pulse_animation"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="کد تأیید"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#1A1A1A"
            android:layout_marginTop="24dp"
            android:letterSpacing="0.02"
            app:layout_constraintTop_toBottomOf="@id/iconCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:id="@+id/titleUnderline"
            android:layout_width="80dp"
            android:layout_height="4dp"
            android:background="@drawable/title_accent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/titleText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/subtitleText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="کد ۶ رقمی ارسال شده به ایمیل خود را وارد کنید"
            android:textSize="15sp"
            android:textColor="#666666"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@id/titleUnderline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/otpCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@id/subtitleText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@android:drawable/ic_popup_sync"
                    android:tint="#2B628A"
                    android:padding="8dp"
                    android:background="@drawable/icon_circle_light"
                    android:layout_gravity="center"
                    android:layout_marginBottom="16dp"
                    android:contentDescription="کد"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/otpInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusTopStart="16dp"
                    app:boxCornerRadiusTopEnd="16dp"
                    app:boxCornerRadiusBottomStart="16dp"
                    app:boxCornerRadiusBottomEnd="16dp"
                    app:boxStrokeColor="#2B628A"
                    app:boxStrokeWidth="2dp"
                    app:startIconDrawable="@android:drawable/ic_lock_idle_lock"
                    app:startIconTint="#2B628A"
                    app:hintTextColor="#2B628A">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtOtp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="کد ۶ رقمی"
                        android:inputType="number"
                        android:maxLength="6"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:padding="20dp"
                        android:letterSpacing="0.3"
                        android:textAlignment="center"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="کد را از ایمیل خود کپی کنید"
                    android:textSize="12sp"
                    android:textColor="#999999"
                    android:layout_marginTop="12dp"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:id="@+id/resendContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/otpCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnVerify"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:text="تأیید و ادامه"
            android:textSize="17sp"
            android:textStyle="bold"
            app:icon="@android:drawable/ic_menu_send"
            app:iconGravity="textEnd"
            app:iconSize="24dp"
            app:cornerRadius="16dp"
            app:backgroundTint="#2B628A"
            app:elevation="6dp"
            android:layout_marginTop="24dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:letterSpacing="0.02"
            app:layout_constraintTop_toBottomOf="@id/resendContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>



    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>